<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.mypa.FragmentAlpha"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_alpha">

        <action
            android:id="@+id/action_FragmentAlpha_to_FragmentCharlie"
            app:destination="@id/ThirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.mypa.FragmentCharlie"
        android:label="third_fragment_label"
        tools:layout="@layout/fragment_charlie">
        <action
            android:id="@+id/action_FragmentCharlie_to_FragmentAlpha"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>